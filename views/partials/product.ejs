<article>
    <div class="foto">
        <a href = "#">
        <img src="/images/<%= product.image %>" width="100%">
        </a>
    </div>

    <div class="detalle">

        <div class="truck">
            <i class="fas fa-truck"></i>
        </div>
        <div class="precio">
            <h3><%= product.price + "$" %> </h3>
        </div>

        <div class="descuento">
            <h3><%= product.descuento + "%" %> </h3>
        </div>
    </div>


    <div class="nombre">
        <h3><%= product.name %></h3>
    </div>

</article>